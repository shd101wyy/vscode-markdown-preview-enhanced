{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "out",
    "lib": ["ES2020", "WebWorker"],
    "rootDir": "src",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "out"]
}
